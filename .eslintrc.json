{
    "env": {
        "es6": true,
        "node": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
	    "sourceType": "module",
        "ecmaVersion": 8,
	    "ecmaFeatures": {
	        "jsx": true,
	        "experimentalObjectRestSpread": true
	    }
	},
    "rules": {
        "indent": [
            "error",
            4
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "never"
        ]
    }
}